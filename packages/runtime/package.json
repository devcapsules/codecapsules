    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@codecapsule/core": "*",
    "quickjs-emscripten": "^0.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "tsup": "^7.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2"
  }
}