{
  "name": "@codecapsule/database",
  "version": "0.1.0",
  "description": "Database layer and schemas for CodeCapsule",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@devcapsules/core": "*",
    "@prisma/client": "^5.22.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "prisma": "^5.5.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  }
}
