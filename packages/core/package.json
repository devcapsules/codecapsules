{
  "name": "@codecapsule/core",
  "version": "0.1.0",
  "description": "Core logic for CodeCapsule - generation, normalization, and evaluation",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@codecapsule/utils": "*"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "eslint": "^8.50.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}