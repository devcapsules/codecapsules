{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@codecapsule/core": ["./packages/core/src"],
      "@codecapsule/core/*": ["./packages/core/src/*"],
      "@codecapsule/ui": ["./packages/ui/src"],
      "@codecapsule/ui/*": ["./packages/ui/src/*"],
      "@codecapsule/database": ["./packages/database/src"],
      "@codecapsule/database/*": ["./packages/database/src/*"],
      "@codecapsule/integrations": ["./packages/integrations/src"],
      "@codecapsule/integrations/*": ["./packages/integrations/src/*"],
      "@codecapsule/utils": ["./packages/utils/src"],
      "@codecapsule/utils/*": ["./packages/utils/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}